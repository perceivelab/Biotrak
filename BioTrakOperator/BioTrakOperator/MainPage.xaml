<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BioTrakOperator.MainPage">

    <StackLayout>
        <Frame BackgroundColor="#2196F3" Padding="24" CornerRadius="0">
            <Label Text="Benvenuti a Biotrak!" HorizontalTextAlignment="Center" TextColor="White" FontSize="24"/>
        </Frame>
        <Image Source="logo.png" WidthRequest="250" Margin="0,10,0,20"/>

        <Button Text="Traccia" Clicked="ScanButtonClicked" BackgroundColor="Transparent" BorderColor="#2196F3" BorderWidth="2" CornerRadius="10" TextColor="#2196F3"/>
        <Button Text="Login" Clicked="LoginButtonClicked" BackgroundColor="Transparent" BorderColor="#2196F3" BorderWidth="2" CornerRadius="10" TextColor="#2196F3"/>
    </StackLayout>

</ContentPage>
